.picker {
  font-size: 10px;
  overflow: hidden;
  width: 100%;
  height: auto;
  margin: 0;
  padding: 0;
  transform: translate3d(0, 0, 0);
  vertical-align: middle;
  color: #000000;
  background-color: inherit;
  .main-content-mask {
    -webkit-mask: -webkit-gradient(linear, 0% 40%, 0% 0%, from(#debb47), to(rgba(36, 142, 36, 0)));
    -webkit-mask: -webkit-linear-gradient(bottom, #debb47 50%, rgba(37, 144, 37, 0));
  }
  .main-content {
    overflow: hidden;

    width: 100%;
    height: auto;

    background-color: transparent;

    -webkit-mask: -webkit-gradient(linear, 0% 50%, 0% 100%, from(#debb47), to(rgba(36, 142, 36, 0)));
    -webkit-mask: -webkit-linear-gradient(top, #debb47 50%, rgba(36, 142, 36, 0));
    .exceed {
      white-space: nowrap;
      position: relative;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .contents {
      font-size: 2.3em;
      line-height: 10em;

      overflow: hidden;

      width: 100%;
      height: 10em;

      text-align: center;
      .content-target {
        transition-timing-function: cubic-bezier(0.23, 1, 0.32, 1);
      }
      .row {
        line-height: 2em;
        height: 2em;
        padding: 0 5px;
      }
    }
    .title {
      font-size: 2.3em;
      line-height: 10em;
      overflow: hidden;
      width: 100%;
      height: 10em;
      text-align: center;
      div {
        font-size: 0.8em;
      }
    }
  }
  .main-content {
    display: flex;
    .contents {
      flex: 2;
    }
    .title {
      flex: 1;
    }
  }
  .picker-center-light {
    font-size: 2.3em;
    position: absolute;
    top: 40%;
    left: 0;
    box-sizing: border-box;
    width: 100%;
    height: 2em;
    pointer-events: none;
    border-top: 1px solid #bbb;
    border-bottom: 1px solid #bbb;
  }
}
